<div class="page-header">
  <h1>
    Photos
    <a href="/photos/new" class="btn btn-lg btn-success">New Photo</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <a href="/photos/new" class="btn btn-default btn-block">
      <i class="fa fa-plus"></i>
    </a>

<div class="row">
  <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>Image</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @photo.each do |photo| %>
      <tr>
        <ul class="media-list">
          
          <li class="media">
            <div class="media-body">
              <h6 class="media-heading">
                <a href="/users/"> </a>
                <small>
                  3 days ago
                </small>
              </h6>
              <%= photo.caption %>
            </div>
          </li>
          

        <li>
          <div class="panel-body"><img src="<%= photo.image %>"class="img-responsive">
        </li>


        <p>
 <% if Like.where(:photo_id => photo.id).where(:user_id => current_user.id).exists? %>
            <form action="/delete_like/<%= Like.find_by(:photo_id => photo.id, :user_id => current_user.id).id %>">
                <button class="btn btn-link">
                  <i class="fa fa-heart"></i>
                </button>
                <%= photo.fans.pluck(:username).to_sentence %> like this
            </form>
          <% else %>
            <form action="/create_like" method="post">
                <input type="hidden" name="photo_id" value="<%= photo.id %>">
                <input type="hidden" name="user_id" value="<%= current_user.id %>">
                <button class="btn btn-link">
                  <i class="fa fa-heart-o"></i>
                </button>
                <%= photo.fans.pluck(:username).to_sentence %> like this
            </form>
          <% end %>
        </p>
        
      
        
      
      <% Comment.where(:photo_id => photo.id).each do |comment| %>
      
        <li class="media">
            <div class="media-body">
              <h6 class="media-heading">
                <a>comment.user_id</a>
                <small>
                  3 days ago
                </small>
              </h6>
              <%= comment.body %>
            </div>
          </li>
          
      <% end %>
                         
        <li class="media">
            <div class="media-body">
              <form action="/create_comment" method="post">
                <!-- Hidden input for authenticity token to protect from forgery -->
                <input name="authenticity_token" type="hidden" value="jkpbmHPTurcwD0lHafrspyUfKQ9IQRuHsi7G17EAAMAT5TJRCsWcE4D/ckXl3FHZMXhGrWU87ZFH7oeJjykyFA==">

                <input type="hidden" name="photo_id" value="139">

                <input type="hidden" name="user_id" value="187">

                <!-- Label and input for body -->
                <div class="form-group">
                  <label for="body" class="sr-only">
                    Body
                  </label>

                  <div class="input-group">
                    <input type="text" id="body" name="body" class="form-control" placeholder="Add a comment..." required>

                    <span class="input-group-btn">
                      <button class="btn btn-default" type="submit">
                        <i class="fa fa-commenting-o"></i>
                      </button>
                    </span>
                  </div><!-- /input-group -->
                </div>
              </form>
            </div>
          </li>
          


     <div class="btn-group btn-group-justified">
      <a href="/photos" class="btn btn-primary">
        Back
      </a>
      
      <% if current_user.id == photo.user_id %>
        <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>

        </ul>
          
        
      </tr>
      
      <% end %>
    </table>
  </div>
</div>
</div>
</div>
</div>